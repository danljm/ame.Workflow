@{
    ViewBag.Title = "PreRelationalList";
}

<h2>Pre Relational List - Test Process</h2>

<div id="example" class="k-content">
    <div id="grid">
    </div>
    <script>

        var performers = createData();

        function createData() {
            var data = [];
            var processSteps = ['Software Provider', 'Administration', 'Sales', 'Service', 'Corp. Customer'];
            for (var i = 0; i < 5; i++) {
                data.push({
                    Id: i + 1,
                    ProcessStep: processSteps[i],
                    AccountedFor: true
                });
            }
            return data;
        }

        $(document).ready(function () {
            var dataSource = new kendo.data.DataSource({
                data: performers,
                autoSync: true,
                pageSize: 20,
                schema: {
                    model: {
                        id: "ProcessID",
                        fields: {
                            ProcessID: { editable: false, nullable: true },
                            ProcessStep: { validation: { required: true} },
                            AccountedFor: { type: "boolean" }
                        }
                    }
                }
            });


            $("#grid").kendoGrid({
                dataSource: dataSource,
                height: 430,
                toolbar: ["create"],
                columns: [
                            { field: "ProcessStep", title: "Performer", width: "200px" },
                            { field: "AccountedFor", title: "Accounted For", format: "{0:c}", width: "100px" },
                            { command: ["destroy"], title: " ", width: "90px"}],
                editable: true
            });
        });
    </script>
</div>
